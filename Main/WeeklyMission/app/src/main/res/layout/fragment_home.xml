<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_home">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/home_pannel_background_iv"
                android:layout_width="match_parent"
                android:layout_height="430dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_first_album_default"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/home_pannel_btn_nugu_iv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/btn_main_mike"
                app:layout_constraintEnd_toStartOf="@id/home_pannel_btn_ticket_iv"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/home_pannel_btn_ticket_iv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/btn_main_ticket"
                app:layout_constraintEnd_toStartOf="@id/home_pannel_btn_setting_iv"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/home_pannel_btn_setting_iv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/btn_main_setting"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/home_pannel_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:text="포근하게 덮어주는 꿈의\n목소리"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_pannel_btn_nugu_iv" />

            <ImageView
                android:id="@+id/home_pannel_btn_play_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/btn_panel_play_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_pannel_btn_nugu_iv" />

            <TextView
                android:id="@+id/home_pannel_album_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="12dp"
                android:text="총 36곡 2020.06.05"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/home_pannel_album_img2_iv"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/home_pannel_album_img1_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/img_album_exp"
                app:layout_constraintBottom_toBottomOf="@id/home_pannel_background_iv"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/home_pannel_album_img2_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="80dp"
                android:src="@drawable/img_album_exp"
                app:layout_constraintBottom_toBottomOf="@id/home_pannel_background_iv"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/home_pannel_album_title1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="잠이 안 온다"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/home_pannel_album_singer1_tv"
                app:layout_constraintStart_toEndOf="@id/home_pannel_album_img1_iv"
                app:layout_constraintTop_toTopOf="@id/home_pannel_album_img1_iv" />

            <TextView
                android:id="@+id/home_pannel_album_singer1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="젠(zen)"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/home_pannel_album_img1_iv"
                app:layout_constraintStart_toEndOf="@id/home_pannel_album_img1_iv"
                app:layout_constraintTop_toBottomOf="@id/home_pannel_title_tv"
                app:layout_constraintVertical_bias="0.995" />

            <TextView
                android:id="@+id/home_pannel_album_title2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="잠이 안 온다"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/home_pannel_album_singer2_tv"
                app:layout_constraintStart_toEndOf="@id/home_pannel_album_img2_iv"
                app:layout_constraintTop_toTopOf="@id/home_pannel_album_img2_iv" />

            <TextView
                android:id="@+id/home_pannel_album_singer2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="젠(zen)"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/home_pannel_album_img2_iv"
                app:layout_constraintStart_toEndOf="@id/home_pannel_album_img2_iv"
                app:layout_constraintTop_toBottomOf="@id/home_pannel_title_tv"
                app:layout_constraintVertical_bias="0.995" />

            <LinearLayout
                android:id="@+id/home_pannel_today_music_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/home_pannel_background_iv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:id="@+id/home_pannel_today_music_inner1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/home_pannel_today_music_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오늘 발매 음악"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/home_pannel_btn_main_arrow_more_iv"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/btn_main_arrow_more"
                        app:layout_constraintStart_toEndOf="@id/home_pannel_today_music_tv"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/home_pannel_today_music_inner2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="130dp">

                    <TextView
                        android:id="@+id/home_pannel_today_music_total_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="종합"
                        android:textColor="@color/purple"
                        android:textSize="18sp"
                        android:layout_marginEnd="15dp"/>

                    <TextView
                        android:id="@+id/home_pannel_today_music_local_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="국내"
                        android:textColor="@color/grey"
                        android:textSize="18sp"
                        android:layout_marginEnd="15dp"
                        app:layout_constraintStart_toEndOf="@id/home_pannel_today_music_total_tv"/>

                    <TextView
                        android:id="@+id/home_pannel_today_music_global_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="해외"
                        android:textColor="@color/grey"
                        android:textSize="18sp"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/home_pannel_today_music_local_tv"/>
                </LinearLayout>
            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_pannel_today_music_layout">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/home_pannel_album1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/home_pannel_today_music_album_layout1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/home_pannel_today_music1_iv"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:src="@drawable/img_iu_album" />

                            <ImageView
                                android:id="@+id/home_pannel_black_play1_iv"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginEnd="3dp"
                                android:layout_marginBottom="3dp"
                                android:src="@drawable/widget_black_play"
                                app:layout_constraintBottom_toBottomOf="@id/home_pannel_today_music1_iv"
                                app:layout_constraintEnd_toEndOf="@id/home_pannel_today_music1_iv" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:id="@+id/home_pannel_today_music_text_layout1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            app:layout_constraintStart_toStartOf="@id/home_pannel_today_music_album_layout1"
                            app:layout_constraintTop_toBottomOf="@id/home_pannel_today_music_album_layout1">

                            <TextView
                                android:id="@+id/home_pannel_today_music_title1_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="라일락"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/home_pannel_today_music_singer1_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="아이유 (IU)"
                                android:textColor="@color/grey"
                                android:textSize="15sp"
                                app:layout_constraintTop_toBottomOf="@id/home_pannel_today_music_title1_tv" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/home_pannel_album2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@id/home_pannel_album1">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/home_pannel_today_music_album_layout2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@id/home_pannel_album1"
                            app:layout_constraintTop_toBottomOf="@id/home_pannel_today_music_layout">

                            <ImageView
                                android:id="@+id/home_pannel_today_music2_iv"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:src="@drawable/img_iu_album"/>

                            <ImageView
                                android:id="@+id/home_pannel_black_play2_iv"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginEnd="3dp"
                                android:layout_marginBottom="3dp"
                                android:src="@drawable/widget_black_play"
                                app:layout_constraintBottom_toBottomOf="@id/home_pannel_today_music2_iv"
                                app:layout_constraintEnd_toEndOf="@id/home_pannel_today_music2_iv" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:id="@+id/home_pannel_today_music_text_layout2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            app:layout_constraintStart_toStartOf="@id/home_pannel_today_music_album_layout2"
                            app:layout_constraintTop_toBottomOf="@id/home_pannel_today_music_album_layout2">

                            <TextView
                                android:id="@+id/home_pannel_today_music_title2_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="제목"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/home_pannel_today_music_singer2_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="가수"
                                android:textColor="@color/grey"
                                android:textSize="15sp"
                                app:layout_constraintStart_toStartOf="@id/home_pannel_today_music_album_layout2"
                                app:layout_constraintTop_toBottomOf="@id/home_pannel_today_music_title2_tv" />
                        </LinearLayout>
                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/home_pannel_today_music_album_layout3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toEndOf="@id/home_pannel_album2">

                        <ImageView
                            android:id="@+id/home_pannel_today_music3_iv"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/img_iu_album" />

                        <ImageView
                            android:id="@+id/home_pannel_black_play3_iv"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="3dp"
                            android:layout_marginBottom="3dp"
                            android:src="@drawable/widget_black_play"
                            app:layout_constraintBottom_toBottomOf="@id/home_pannel_today_music3_iv"
                            app:layout_constraintEnd_toEndOf="@id/home_pannel_today_music3_iv" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:id="@+id/home_pannel_today_music_text_layout3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="@id/home_pannel_today_music_album_layout3"
                        app:layout_constraintTop_toBottomOf="@id/home_pannel_today_music_album_layout3">

                        <TextView
                            android:id="@+id/home_pannel_today_music_title3_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="제목"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="@id/home_pannel_today_music3_iv"
                            app:layout_constraintTop_toBottomOf="@id/home_pannel_today_music3_iv" />

                        <TextView
                            android:id="@+id/home_pannel_today_music_singer3_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가수"
                            android:textColor="@color/grey"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="@id/home_pannel_today_music3_iv"
                            app:layout_constraintTop_toBottomOf="@id/home_pannel_today_music_title3_tv" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </HorizontalScrollView>

            <ImageView
                android:id="@+id/home_pannel_viewpager1_iv"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/img_home_viewpager_exp"
                app:layout_constraintTop_toBottomOf="@id/horizontalScrollView1"/>

            <TextView
                android:id="@+id/home_pannel_potcast_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="매일 들어도 좋은 팟캐스트"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_pannel_viewpager1_iv"/>

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toBottomOf="@id/home_pannel_potcast_tv"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/home_pannel_potcast1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/home_pannel_potcast1_iv"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/img_potcast_exp"/>

                        <TextView
                            android:id="@+id/home_pannel_potcast_title1_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="제목"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="@id/home_pannel_potcast1_iv"
                            app:layout_constraintTop_toBottomOf="@id/home_pannel_potcast1_iv"/>

                        <TextView
                            android:id="@+id/home_pannel_potcast_singer1_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가수"
                            android:textColor="@color/grey"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="@id/home_pannel_potcast1_iv"
                            app:layout_constraintTop_toBottomOf="@id/home_pannel_potcast_title1_tv"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/home_pannel_potcast2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/home_pannel_potcast1"
                        android:layout_marginStart="15dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/home_pannel_potcast2_iv"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/img_potcast_exp" />

                        <TextView
                            android:id="@+id/home_pannel_potcast_title2_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="제목"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="@id/home_pannel_potcast2_iv"
                            app:layout_constraintTop_toBottomOf="@id/home_pannel_potcast2_iv" />

                        <TextView
                            android:id="@+id/home_pannel_potcast_singer2_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가수"
                            android:textColor="@color/grey"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="@id/home_pannel_potcast2_iv"
                            app:layout_constraintTop_toBottomOf="@id/home_pannel_potcast_title2_tv" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/home_pannel_potcast3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="15dp"
                        app:layout_constraintStart_toEndOf="@id/home_pannel_potcast2">

                        <ImageView
                            android:id="@+id/home_pannel_potcast3_iv"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/img_potcast_exp"/>

                        <TextView
                            android:id="@+id/home_pannel_potcast_title3_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="제목"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="@id/home_pannel_potcast3_iv"
                            app:layout_constraintTop_toBottomOf="@id/home_pannel_potcast3_iv" />

                        <TextView
                            android:id="@+id/home_pannel_potcst_singer3_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가수"
                            android:textColor="@color/grey"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="@id/home_pannel_potcast3_iv"
                            app:layout_constraintTop_toBottomOf="@id/home_pannel_potcast_title3_tv" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/home_pannel_video_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:text="비디오 콜렉션"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/horizontalScrollView2"/>

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_pannel_video_tv">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/home_pannel_video1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/home_pannel_video1_iv"
                            android:layout_width="270dp"
                            android:layout_height="150dp"
